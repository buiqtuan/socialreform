# Environment variables declared in this file are available at build time and runtime.
# Copy this file to .env and update the values with your actual credentials.

# Database - Railway PostgreSQL
# Get this from your Railway dashboard > PostgreSQL service > Connect tab
DATABASE_URL="postgresql://postgres:YOUR_RAILWAY_PASSWORD@YOUR_RAILWAY_HOST:PORT/railway"

# Additional Railway variables (if needed)
POSTGRES_DB="railway"
POSTGRES_PASSWORD="YOUR_RAILWAY_PASSWORD"
POSTGRES_USER="postgres"

# Authentication - Generate secure random strings for production
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-this-in-production"

# Firebase Admin SDK
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# Social Media API Keys
YOUTUBE_CLIENT_ID="your-youtube-client-id"
YOUTUBE_CLIENT_SECRET="your-youtube-client-secret"
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"
TIKTOK_CLIENT_ID="your-tiktok-client-id"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"

# File Upload
UPLOAD_MAX_SIZE=50000000
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,video/quicktime"

# Email Service (Optional)
EMAIL_SERVICE_API_KEY="your-email-service-api-key"
EMAIL_FROM="noreply@socialreform.com"

# App Configuration
APP_URL="http://localhost:3001"
MOBILE_APP_URL="socialreform://app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
